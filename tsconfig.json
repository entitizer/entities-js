{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "./src",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types"
    },
    "include": [
        "src/**/*.ts"
    ]
}
